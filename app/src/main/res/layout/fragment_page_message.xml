<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_386FFE"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="消息"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white_f5"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="70dp">
        <com.example.habin.lostpropertyproject.Widget.CircleImageView
            android:id="@+id/civ_sy_message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_message"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_subscript"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_subscript"
            android:paddingLeft="4.5sp"
            android:paddingBottom="3.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="38dp"
            android:text="1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_sy_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统通知"
            android:layout_toRightOf="@+id/civ_sy_message"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无消息"
            android:textColor="@color/gray"
            android:layout_below="@+id/tv_sy_message"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            />
    </RelativeLayout>
</LinearLayout>