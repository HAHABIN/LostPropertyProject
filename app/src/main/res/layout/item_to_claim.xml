<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp">

            <com.example.habin.lostpropertyproject.view.CircleImageView
                android:id="@+id/civ_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/ttt" />
            <!-- 用户名 -->
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15sp"
                android:layout_toRightOf="@+id/civ_pic"
                android:text="用户名"
                android:textColor="@color/black_26"
                android:textSize="14sp" />
            <!--发布时间-->
            <TextView
                android:id="@+id/tv_release_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/civ_pic"
                android:text="时间"
                android:textColor="@color/grey_515151"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_result"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@mipmap/ic_result_seeking"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/white_eb" />

        <TextView
            android:id="@+id/tv_note_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:padding="5dp"
            android:text="@string/text_content"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_content_pic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ttt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/white_eb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:src="@mipmap/ic_address" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="地址"
                android:textColor="@color/grey_515151"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:src="@mipmap/ic_time" />
            <TextView
                android:id="@+id/tv_find_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2019/12/30/17:10"
                android:textColor="@color/grey_515151"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>